<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/fragment_168_dp"
    android:layout_height="@dimen/fragment_128_dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/fragment_8_dp"
    android:layout_marginBottom="@dimen/fragment_16_dp"
    android:layout_marginEnd="@dimen/fragment_8_dp"
    android:background="@color/light_grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/help_category_image"
            android:layout_width="@dimen/fragment_120_dp"
            android:layout_height="@dimen/fragment_80_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/fragment_24_dp"
            android:layout_marginTop="@dimen/fragment_12_dp"
            android:layout_marginEnd="@dimen/fragment_24_dp"
            android:layout_marginBottom="@dimen/fragment_12_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/help_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/help_category_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fragment_8_dp"
            android:layout_marginBottom="@dimen/fragment_16_dp"
            tools:text="Дети"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/help_category_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>